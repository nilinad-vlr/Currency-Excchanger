<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/firstFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rus_flag_72" />

        <TextView
            android:id="@+id/From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/firstValue"
            android:layout_marginBottom="23.5dp"
            android:layout_toEndOf="@id/firstFlag"
            android:text="from"
            android:textAllCaps="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/firstValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="31dp"
            android:layout_toEndOf="@id/firstFlag"
            android:text="rub"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/inputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/secondFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/usa_flag_72" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/secondValue"
            android:layout_marginBottom="31dp"
            android:layout_toEndOf="@id/secondFlag"
            android:text="to"
            android:textAllCaps="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/secondValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="31dp"
            android:layout_toRightOf="@id/secondFlag"
            android:text="usd"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/outputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="31dp"
            android:maxLength="9"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn1"
                style="@style/button"
                android:text="1" />

            <TextView
                android:id="@+id/btn2"
                style="@style/button"
                android:text="2" />

            <TextView
                android:id="@+id/btn3"
                style="@style/button"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn4"
                style="@style/button"
                android:text="4" />

            <TextView
                android:id="@+id/btn5"
                style="@style/button"
                android:text="5" />

            <TextView
                android:id="@+id/btn6"
                style="@style/button"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn7"
                style="@style/button"
                android:text="7" />

            <TextView
                android:id="@+id/btn8"
                style="@style/button"
                android:text="8" />

            <TextView
                android:id="@+id/btn9"
                style="@style/button"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnAC"
                style="@style/button"
                android:text="ac"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/btn0"
                style="@style/button"
                android:text="0" />

            <ImageView
                android:id="@+id/btnBackSpace"
                style="@style/button"
                android:scaleType="center"
                android:src="@drawable/backspace_icon_s"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>